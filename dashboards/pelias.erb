<% content_for :title do %>Pelias Dashboard<% end %>

<div class="gridster">
  <ul>
    <!-- counts -->
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="2">
      <div data-id="types-counts" data-view="List" data-unordered="true" data-title="Counts"></div>
    </li> 

    <!-- build status -->
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="build-status" data-view="Text" data-title="Pelias Build Status"></div>
    </li>

    <!-- es metrics -->
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="es-version" data-view="Text" data-title="Elastic Version"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="percent-complete" data-view="Text" data-title="Estimated Percent Complete"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="es-store-size" data-view="Text" data-title="Doc Store Size"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="es-index-rate" data-view="Meter" data-title="Indexing Rate" data-min="0" data-max="6000"></div>
    </li>

  </ul>
</div>
